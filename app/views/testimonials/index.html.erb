<div class="content-area">
    <div class="container main_content_wrap">
      <div class="page_wrapper">  
       <header class="entry-header">
         <div class="entry-content">
<p id="notice"><%= notice %></p>

<h1>Listing Testimonials</h1>
<% if user_signed_in? %>
  <%= link_to 'New Testimonial', new_testimonial_path %>
<% else %>
  <%= link_to 'Login to add Testimonial', new_user_session_path %>
<% end %>


 
    <% @testimonials.each do |testimonial| %>
    <div>
          <!-- <h2 class="entry-title">From the Blog</h2> -->
          <h3 class="entry-title"><%= testimonial.title %></h3>
          <div class="post-date"><%= testimonial.created_at.strftime('%B %d, %Y') %></div><!-- post-date -->
          <div class="post-comment"> &nbsp;|&nbsp; <%= testimonial.user_name %></div>
          <br>
                <div style="width:920px">
                <p align="justify"><%= testimonial.testimonial %></p>
                </div>
          
    <% end %>
 </div>
        </header> 
      </div>
    </div>
  </div> 






